<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNO Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #00AEEF;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            text-align: center;
            background-color: #FFE084;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #FF4500;
        }
        input[type="text"] {
            width: 80%;
            padding: 10px;
            margin: 20px 0;
            border: 2px solid #FF4500;
            border-radius: 10px;
            font-size: 16px;
        }
        .button {
            background-color: #FF4500;
            color: white;
            padding: 10px 20px;
            margin: 10px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .button:hover {
            background-color: #E03C00;
        }
        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #FF4500;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to UNO game!</h1>
        <form id="registrationForm">
            <input type="text" id="name" placeholder="Name:" required>
            <div>
                <button type="button" class="button" id="maleButton">Male</button>
                <button type="button" class="button" id="femaleButton">Female</button>
            </div>
        </form>
        <div class="footer">Powered by -Taha Ramakda</div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        document.getElementById('maleButton').addEventListener('click', () => {
            registerPlayer('male');
        });

        document.getElementById('femaleButton').addEventListener('click', () => {
            registerPlayer('female');
        });

        function registerPlayer(gender) {
            const name = document.getElementById('name').value;
            if (name) {
                socket.emit('registerPlayer', { name, gender });
            } else {
                alert('Please enter your name.');
            }

            socket.on('registrationSuccess', (data) => {
                console.log('Registration successful:', data);
                localStorage.setItem('playerName', data.playerName);
                localStorage.setItem('cardCount', data.cardCount);
                window.location.href = '/game';
            });
        }
    </script>
</body>
</html>
